<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Switch
        android:id="@+id/switchSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Lembrar Senha"
        android:textOff="DESLIGADO"
        android:textOn="LIGADO"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Button" />

    <ToggleButton
        android:id="@+id/toggleSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="DESLIGADO"
        android:textOn="LIGADO"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lembrar Alarme" />

    <Button
        android:id="@+id/botaoSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cliqueEnviar"
        android:text="Button" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTADOO" />
</LinearLayout>