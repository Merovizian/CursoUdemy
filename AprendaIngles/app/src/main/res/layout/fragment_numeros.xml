<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/segundo_fundo"
    tools:context=".fragments.NumerosFragment"


    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875" />

    <ImageView
        android:id="@+id/imageUm"
        android:layout_width="140dp"
        android:layout_height="230dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:src="@drawable/um"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDois"
        android:layout_width="140dp"
        android:layout_height="230dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:src="@drawable/dois"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageTres"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:src="@drawable/tres"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/imageUm" />

    <ImageView
        android:id="@+id/imageQuatro"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:src="@drawable/quatro"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imageDois" />

    <ImageView
        android:id="@+id/imageCinco"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:src="@drawable/cinco"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/imageTres" />

    <ImageView
        android:id="@+id/imageSeis"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:src="@drawable/seis"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imageQuatro" />


</androidx.constraintlayout.widget.ConstraintLayout>