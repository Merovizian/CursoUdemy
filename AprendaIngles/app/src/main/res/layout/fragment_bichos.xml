<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9B9"
    tools:context=".fragments.BichosFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/imageCao"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="231dp"
        android:foreground="@drawable/cao"
        app:icon="@drawable/cao"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageGato"
        style="@android:style/Widget.Holo.Button.Borderless"

        android:layout_width="140dp"
        android:layout_height="231dp"
        android:foreground="@drawable/gato"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageLeao"
        android:layout_width="140dp"
        style="@android:style/Widget.Holo.Button.Borderless"

        android:layout_height="231dp"
        android:foreground="@drawable/leao"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Button"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/imageCao" />

    <Button
        android:id="@+id/imageMacaco"
        android:layout_width="140dp"
        style="@android:style/Widget.Holo.Button.Borderless"

        android:layout_height="231dp"
        android:foreground="@drawable/macaco"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/imageGato" />

    <ImageButton
        android:id="@+id/imageOvelha"
        android:layout_width="140dp"
        android:layout_height="220dp"

        android:foreground="@drawable/ovelha"
        android:scaleType="fitCenter"
        android:src="@drawable/ovelha"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/imageLeao" />

    <ImageButton
        android:id="@+id/imageVaca"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:foreground="@drawable/vaca"
        android:src="@drawable/vaca"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/imageMacaco" />

</androidx.constraintlayout.widget.ConstraintLayout>