<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_fundo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fundo" />

        <ImageView
            android:id="@+id/image_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="abrirVideo"
            app:layout_constraintBottom_toBottomOf="@+id/image_fundo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_fundo"
            app:srcCompat="@drawable/play" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Rick and Morty"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_fundo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="2018 1Âª temporada"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="315dp"
            android:numStars="5"
            android:progressTint="#E91E63"
            android:rating="4.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/o_show_gira_em_torno_das_aventuras_dos_membros_da_fam_lia_smith_que_consiste_nos_pais_jerry_e_beth_seus_filhos_summer_e_morty_e_o_pai_de_beth_chamado_rick_sanchez_que_mora_com_eles_como_h_spede_de_acordo_com_justin_roiland_a_fam_lia_mora_fora_da_cidade_de_seattle_no_estado_norte_americano_de_washington_2_no_entanto_as_aventuras_de_rick_e_morty_ocorrem_em_um_n_mero_infinito_de_realidades_com_os_personagens_viajando_para_outros_planetas_e_dimens_es_atrav_s_de_portais_usando_o_ve_culo_voador_de_rick_rick_um_cientista_louco_exc_ntrico_e_alco_latra_que_evita_muitas_conven_es_costumeiras_como_escola_casamento_amor_e_fam_lia_ele_frequentemente_vai_em_aventuras_com_seu_neto_de_14_anos_de_idade_morty_um_menino_de_bom_cora_o_mas_que_tamb_m_fica_facilmente_angustiado_cuja_b_ssola_moral_ing_nua_mas_fundamentada_funciona_em_contraponto_ao_ego_maquiav_lico_de_rick_a_irm_de_morty_summer_de_17_anos_uma_adolescente_mais_convencional_que_se_preocupa_em_melhorar_seu_status_social_entre_seus_colegas_e_s_vezes_acompanha_rick_e_morty_em_suas_aventuras"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>