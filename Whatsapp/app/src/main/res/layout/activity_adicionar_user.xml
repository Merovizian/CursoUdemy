<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdicionarUser">

    <EditText
        android:id="@+id/input_adicionarUser_email"
        android:layout_width="279dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionarUser_validarUser"
        android:layout_width="71dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/input_adicionarUser_email"
        app:layout_constraintStart_toEndOf="@+id/input_adicionarUser_email"
        app:layout_constraintTop_toTopOf="@+id/input_adicionarUser_email" />
</androidx.constraintlayout.widget.ConstraintLayout>