<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ifes.eric.organizze">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organizze"
        tools:targetApi="31">
        <activity
            android:name=".activity.DespesaActivity"
            android:exported="false"
            android:theme="@style/Eric.despesa"/>
        <activity
            android:name=".activity.ReceitasActivity"
            android:exported="false"
            android:theme="@style/Eric.receitas"/>
        <activity
            android:name=".activity.PrincipalActivity"
            android:exported="false"
            android:theme="@style/Theme.OrganizzeAction"/>
        <activity
            android:name=".activity.cadastroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.loginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>